    "format": "npm run format --workspaces --if-present"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "@nestjs/cli": "^10.0.0"
  },
  "overrides": {
    "react": "19.1.0",
    "@types/react": "19.1.8",
    "react-dom": "19.1.0",
    "@types/react-dom": "19.1.8"
  }
}