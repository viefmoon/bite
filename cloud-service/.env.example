# Variables de entorno para Cloud Service
# IMPORTANTE: Estas variables deben configurarse en el dashboard de Railway
# NO subas un archivo .env real con credenciales al repositorio

# Base de datos - Railway la proporciona automáticamente cuando agregas PostgreSQL
DATABASE_URL=postgresql://usuario:password@host:5432/database

# WhatsApp Business API
WHATSAPP_VERIFY_TOKEN=un_token_seguro_para_verificacion
WHATSAPP_ACCESS_TOKEN=EAAxxxxx_tu_token_de_acceso_de_whatsapp
WHATSAPP_PHONE_NUMBER_ID=tu_phone_number_id
META_APP_SECRET=tu_app_secret_de_meta

# APIs de IA (opcional - solo agrega las que vayas a usar)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxx
GOOGLE_AI_API_KEY=AIzaxxxxxxxxxxxxxxxxxxxxx
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxx

# Seguridad
JWT_SECRET=un_string_aleatorio_muy_largo_y_seguro

# Sincronización con backend local (opcional)
SYNC_ENABLED=true
SYNC_API_KEY=una_clave_segura_para_autenticar_sync
LOCAL_BACKEND_URL=http://192.168.1.100:3000/api

# Frontend URL para links de OTP
FRONTEND_BASE_URL=https://tu-frontend.com

# Puerto - Railway lo asigna automáticamente
PORT=5000

# Ambiente
NODE_ENV=production